<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Failure Icon -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:src="@android:drawable/ic_dialog_alert"
            android:tint="#F44336"
            android:contentDescription="Failure Icon" />

        <!-- Failure Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Thanh toán thất bại"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:gravity="center" />

        <!-- Failure Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Đơn hàng của bạn chưa được thanh toán"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- Order Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin đơn hàng"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Order Code -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mã đơn hàng:"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORD000001"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                </LinearLayout>

                <!-- Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trạng thái:"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán thất bại"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Note -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Đơn hàng của bạn vẫn được lưu\n• Bạn có thể thanh toán lại hoặc chọn phương thức khác\n• Liên hệ CSKH nếu cần hỗ trợ"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/btn_retry_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Thử thanh toán lại"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:padding="16dp" />

        <Button
            android:id="@+id/btn_view_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Xem đơn hàng"
            android:textSize="16sp"
            android:backgroundTint="#666666"
            android:textColor="@android:color/white"
            android:padding="16dp" />

        <Button
            android:id="@+id/btn_back_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Về trang chủ"
            android:textSize="16sp"
            android:backgroundTint="@android:color/white"
            android:textColor="#666666"
            android:padding="16dp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

</ScrollView>

