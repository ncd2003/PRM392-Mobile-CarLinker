<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.home.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header với Profile Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="16dp">

                <!-- Logo hoặc App Name bên trái -->
                <LinearLayout
                    android:id="@+id/layoutAppInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CarLinker"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#6200EE"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chăm sóc xe của bạn"
                        android:textSize="12sp"
                        android:textColor="#666666"/>
                </LinearLayout>

                <!-- Profile Button tròn bên phải -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnProfileMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#6200EE">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="@android:color/white"/>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/tvWelcomeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_welcome"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp"/>

            <!-- Nút Cứu Hộ Khẩn Cấp - Chiếm 80% chiều ngang -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="32dp">

                <Button
                    android:id="@+id/btn_emergency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:minHeight="60dp"
                    android:text="@string/btn_emergency"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_emergency_background"
                    android:elevation="4dp"/>

            </LinearLayout>

            <!-- Tiêu đề Tiện Ích -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/utilities_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- Grid 4 nút tiện ích (2x2) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Card 1: Mua sắm linh kiện -->
                    <FrameLayout
                        android:id="@+id/card_shop"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/card_shop_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_shop_icon"
                                android:textSize="36sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_shop_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"/>

                        </LinearLayout>
                    </FrameLayout>

                    <!-- Card 2: Đặt lịch dịch vụ -->
                    <FrameLayout
                        android:id="@+id/card_booking"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/card_booking_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_booking_icon"
                                android:textSize="36sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_booking_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"/>

                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 3: Garage gần nhất -->
                    <FrameLayout
                        android:id="@+id/card_garage"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/card_garage_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_garage_icon"
                                android:textSize="36sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_garage_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"/>

                        </LinearLayout>
                    </FrameLayout>

                    <!-- Card 4: Hỗ trợ khách hàng -->
                    <FrameLayout
                        android:id="@+id/card_support"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/card_support_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_support_icon"
                                android:textSize="36sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card_support_title"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:gravity="center"/>

                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
