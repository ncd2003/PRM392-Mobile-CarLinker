<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Garage Icon -->
        <ImageView
            android:id="@+id/iv_garage_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_garage"
            android:contentDescription="Garage icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Garage Name -->
        <TextView
            android:id="@+id/tv_garage_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="ABC Auto Repair"
            app:layout_constraintTop_toTopOf="@id/iv_garage_icon"
            app:layout_constraintStart_toEndOf="@id/iv_garage_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_last_message_time" />

        <!-- Last Message -->
        <TextView
            android:id="@+id/tv_last_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Thank you for choosing our service!"
            app:layout_constraintTop_toBottomOf="@id/tv_garage_name"
            app:layout_constraintStart_toEndOf="@id/iv_garage_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_last_message_time"
            app:layout_constraintBottom_toBottomOf="@id/iv_garage_icon" />

        <!-- Last Message Time -->
        <TextView
            android:id="@+id/tv_last_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            tools:text="10:30 AM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

