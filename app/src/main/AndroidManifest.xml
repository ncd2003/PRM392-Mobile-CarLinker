<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Storage permissions for file upload -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- GPS permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- GPS permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".Application.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PRM392MobileCarLinker"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Home Activity - LAUNCHER (Màn hình đầu tiên) -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Product List Activity -->

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.PRM392MobileCarLinker" />

        <activity
            android:name=".ui.shop.ProductListActivity"
            android:exported="true" />

        <activity android:name=".ui.vehicle.VehicleListActivity" android:exported="true" />
        <activity android:name=".ui.vehicle.VehicleDetailActivity" android:exported="false" />
        <activity android:name=".ui.vehicle.VehicleFormActivity" android:exported="false" />

        <!-- Product Detail Activity -->
        <activity
            android:name=".ui.shop.ProductDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.shop.ProductListActivity" />

        <!-- Cart Activity -->
        <activity
            android:name=".ui.cart.CartActivity"
            android:exported="false"
            android:parentActivityName=".ui.shop.ProductListActivity" />

        <!-- Checkout Activity -->
        <activity
            android:name=".ui.checkout.CheckoutActivity"
            android:exported="false"
            android:parentActivityName=".ui.cart.CartActivity" />

        <!-- My Orders Activity -->
        <activity
            android:name=".ui.order.MyOrdersActivity"
            android:exported="false"
            android:parentActivityName=".ui.shop.ProductListActivity" />

        <!-- Order Detail Activity -->
        <activity
            android:name=".ui.order.OrderDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.order.MyOrdersActivity" />

        <!-- VNPay Payment Activity -->
        <activity
            android:name=".ui.payment.VNPayActivity"
            android:exported="true"
            android:parentActivityName=".ui.checkout.CheckoutActivity"
            android:label="Thanh toán VNPay">

            <!-- Deep link cho payment success -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="carlinker"
                    android:host="payment-success" />
            </intent-filter>

            <!-- Deep link cho payment failed -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="carlinker"
                    android:host="payment-failed" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ui.payment.PaymentSuccessActivity"
            android:exported="false"
            android:label="Thanh toán thành công" />

        <activity
            android:name=".ui.payment.PaymentFailedActivity"
            android:exported="false"
            android:label="Thanh toán thất bại" />


        <!-- Dealer Orders Activity -->
        <activity
            android:name=".ui.dealer.DealerOrdersActivity"
            android:exported="true"
            android:label="Quản lý đơn hàng" />

        <!-- Initiate Chat Activity (UC-02) -->
        <activity
            android:name=".ui.chat.InitiateChatActivity"
            android:exported="false"
            android:label="Start Chat" />

        <!-- Chat Room List Activity -->
        <activity
            android:name=".ui.chat.ChatRoomListActivity"
            android:exported="false"
            android:label="Messages" />

                <!-- Chat Activity -->
        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false"
            android:parentActivityName=".ui.chat.ChatRoomListActivity" />

        <!-- Room Members Activity (UC-04) -->
        <activity
            android:name=".ui.RoomMembersActivity"
            android:exported="false"
            android:parentActivityName=".ui.chat.ChatActivity" />

        <!-- Garage List Activity -->
        <activity
            android:name=".ui.garage.GarageListActivity"
            android:exported="false"
            android:label="Garage gần nhất"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Garage Detail Activity -->
        <activity
            android:name=".ui.garage.GarageDetailActivity"
            android:exported="false"
            android:label="Chi tiết Garage"
            android:parentActivityName=".ui.garage.GarageListActivity" />

        <!-- Service Category List Activity -->
        <activity
            android:name=".ui.servicecategory.ServiceCategoryListActivity"
            android:exported="false"
            android:label="Quản lý Gói Dịch Vụ"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Service Category Detail Activity -->
        <activity
            android:name=".ui.servicecategory.ServiceCategoryDetailActivity"
            android:exported="false"
            android:label="Chi tiết Gói Dịch Vụ"
            android:parentActivityName=".ui.servicecategory.ServiceCategoryListActivity" />

        <!-- Service Category Form Activity -->
        <activity
            android:name=".ui.servicecategory.ServiceCategoryFormActivity"
            android:exported="false"
            android:label="Thêm/Sửa Gói Dịch Vụ"
            android:parentActivityName=".ui.servicecategory.ServiceCategoryListActivity" />

        <!-- Service Item List Activity -->
        <activity
            android:name=".ui.serviceitem.ServiceItemListActivity"
            android:exported="false"
            android:label="Quản lý Dịch Vụ"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Service Item Detail Activity -->
        <activity
            android:name=".ui.serviceitem.ServiceItemDetailActivity"
            android:exported="false"
            android:label="Chi tiết Dịch Vụ"
            android:parentActivityName=".ui.serviceitem.ServiceItemListActivity" />

        <!-- Service Item Form Activity -->
        <activity
            android:name=".ui.serviceitem.ServiceItemFormActivity"
            android:exported="false"
            android:label="Thêm/Sửa Dịch Vụ"
            android:parentActivityName=".ui.serviceitem.ServiceItemListActivity" />

        <!-- Service Booking Activity -->
        <activity
            android:name=".ui.service.ServiceBookingActivity"
            android:exported="false"
            android:label="Đặt Lịch Dịch Vụ"
            android:parentActivityName=".ui.garage.GarageDetailActivity" />

        <!-- Garage Staff List Activity -->
        <activity
            android:name=".ui.garagestaff.GarageStaffListActivity"
            android:exported="false"
            android:label="Quản lý nhân viên"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Garage Staff Detail Activity -->
        <activity
            android:name=".ui.garagestaff.GarageStaffDetailActivity"
            android:exported="false"
            android:label="Chi tiết nhân viên"
            android:parentActivityName=".ui.garagestaff.GarageStaffListActivity" />

        <!-- Garage Staff Form Activity -->
        <activity
            android:name=".ui.garagestaff.GarageStaffFormActivity"
            android:exported="false"
            android:label="Thêm/Sửa nhân viên"
            android:parentActivityName=".ui.garagestaff.GarageStaffListActivity" />

        <!-- User Info Activity -->
        <activity
            android:name=".ui.user.UserInfoActivity"
            android:exported="false"
            android:label="Thông tin cá nhân"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Login Activity -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:label="Đăng nhập"
            android:parentActivityName=".ui.home.HomeActivity" />

        <!-- Register Activity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:label="Đăng ký"
            android:parentActivityName=".ui.auth.LoginActivity" />

        <!-- Partner Register Activity -->
        <activity
            android:name=".ui.auth.PartnerRegisterActivity"
            android:exported="false"
            android:label="Đăng ký đối tác"
            android:parentActivityName=".ui.auth.LoginActivity" />

        <!-- Staff Login Activity -->
        <activity
            android:name=".ui.auth.StaffLoginActivity"
            android:exported="false"
            android:label="Đăng nhập nhân viên"
            android:parentActivityName=".ui.auth.LoginActivity" />

    </application>

</manifest>
